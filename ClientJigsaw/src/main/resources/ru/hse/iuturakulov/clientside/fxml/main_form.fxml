<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0" styleClass="container"
            stylesheets="@../style/main_home.css" xmlns="http://javafx.com/javafx/17"
            fx:controller="ru.hse.iuturakulov.clientside.controllers.MainFormController">

    <HBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox alignment="CENTER">
            <padding>
                <Insets left="30.0" right="30.0" top="10.0"/>
            </padding>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <Label fx:id="playerNameField" alignment="CENTER" text="Username" textAlignment="CENTER" textFill="#1e00ff">
                <font>
                    <Font name="System Bold" size="34.0"/>
                </font>
            </Label>
            <Button fx:id="singlePLayerBtn" mnemonicParsing="false" onAction="#singlePlay" prefHeight="43.0"
                    prefWidth="237.0" styleClass="button" text="Singleplayer">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
                <effect>
                    <DropShadow>
                        <color>
                            <Color red="0.7490196228027344" green="0.6431372761726379" blue="0.6431372761726379"/>
                        </color>
                    </DropShadow>
                </effect>
                <VBox.margin>
                    <Insets bottom="15.0" top="15.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="multiPlayerBtn" mnemonicParsing="false" onAction="#multiplayer" prefHeight="43.0"
                    prefWidth="238.0" styleClass="button" text="Multiplayer">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
                <effect>
                    <DropShadow>
                        <color>
                            <Color red="0.7490196228027344" green="0.6431372761726379" blue="0.6431372761726379"/>
                        </color>
                    </DropShadow>
                </effect>
                <VBox.margin>
                    <Insets bottom="15.0" top="15.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="ratingBtn" mnemonicParsing="false" onAction="#ratingList" prefHeight="43.0" prefWidth="237.0"
                    styleClass="button" text="Rating">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
                <effect>
                    <DropShadow>
                        <color>
                            <Color red="0.7490196228027344" green="0.6431372761726379" blue="0.6431372761726379"/>
                        </color>
                    </DropShadow>
                </effect>
            </Button>
            <Button fx:id="exitBtn" mnemonicParsing="false" onAction="#exit" prefHeight="43.0" prefWidth="238.0"
                    styleClass="button" text="Exit">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
                <effect>
                    <DropShadow>
                        <color>
                            <Color red="0.7490196228027344" green="0.6431372761726379" blue="0.6431372761726379"/>
                        </color>
                    </DropShadow>
                </effect>
                <VBox.margin>
                    <Insets top="15.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </HBox>
</AnchorPane>
